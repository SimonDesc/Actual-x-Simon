<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" href="{{ asset('favicon.png') }}" type="image/x-icon" />

    <title>
      {% block title %}
        Technical interview
      {% endblock %}
    </title>
    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
      <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet" />
      <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet" />
    {% endblock %}
  </head>
  <body class="bg-gray-100 h-screen flex flex-col text-xl">
    <header class="bg-white shadow-md fixed top-0 left-0 w-full z-10">
      <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">
          {% block header_title %}
            Technical interview
          {% endblock %}
        </h1>
      </div>
    </header>

    <div class="flex flex-1 pt-24">
      <div id="sidebar" class="w-1/6 bg-white shadow-md p-4">
        {% block sidebar %}
          <ul class="space-y-4">
            <li>
              <a href="{{ path('admin_index') }}" class="block text-center text-white hover:bg-blue-700 font-semibold py-2 px-4 rounded-sm" style="background-color: #E40521;">Admin</a>
            </li>
            <li>
              <a href="{{ path('manager_index') }}" class="block text-center text-white hover:bg-blue-700 font-semibold py-2 px-4 rounded-sm" style="background-color: #E40521;">Manager</a>
            </li>
            <li>
              <a href="{{ path('student_index') }}" class="block text-center text-white hover:bg-blue-700 font-semibold py-2 px-4 rounded-sm" style="background-color: #E40521;">Student</a>
            </li>
          </ul>
        {% endblock %}
      </div>

      <div id="content" class="flex-1 flex flex-col p-4">
        {% block content %}

        {% endblock %}
      </div>
    </div>

    {% block javascripts %}
      <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    {% endblock %}
  </body>
</html>
